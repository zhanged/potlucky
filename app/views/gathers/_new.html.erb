<div class="whitebg">		
<a name="rebloon"></a>
<%= form_for(Gather.new) do |f| %>
	<%= render 'shared/error_messages', object: f.object %> 
	<div class="field">		
		<div class="input-group">
			<div class="form-label">1. Activity<a href="javascript:;" id="quick-suggestions" onclick="toggle_visibility('suggestion_link')"><div class="suggestion-link">Need Ideas?</div></a></div>
			<div id="suggestion_link" style="display:none;" class="quick-suggestions">
				<%= render 'shared/quick_suggestions' %> 
			</div>
        	<input type="text" class="form-control" name="gather[activity]" placeholder="What, when & where?" maxlength="60">
<!--         	<div class="form-label">Date</div>
	        <input type="text" class="datepicker" name="gather[date]" placeholder="Date" readonly="true"> -->
        </div>

		<div class="input-group min-friends">
			<div class="form-label">2. Minimum friends needed <a title="The activity will take off when this number of people (including yourself) join."><i class="fa fa-question-circle"></i></a> 
				    <select>
        <optgroup label="Group 1">
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
        </optgroup>
    </select>
				<div class="radio-select-area">
					<div id="radio_tilt">
					    <input type="radio" id="radio2" name="gather[tilt]" value="2" /><label for="radio2">2</label>
					    <input type="radio" id="radio3" name="gather[tilt]" value="3" /><label for="radio3">3</label>
					    <input type="radio" id="radio4" name="gather[tilt]" value="4" checked="checked" /><label for="radio4">4</label>
					    <input type="radio" id="radio5" name="gather[tilt]" value="5" /><label for="radio5">5</label>
					    <input type="radio" id="radio6" name="gather[tilt]" value="6" /><label for="radio6">6</label>
					</div>
				</div>
			</div>
		</div>

		
	</div>
	<%= f.submit "Next", data: { disable_with: 'Please wait...' }, class: "btn btn-large btn-block btn-invite" %>

<% end %>
</div>