<span class="tilt">
Hey
<% if signed_in? %>
	<%= current_user.name.split(' ').first %>
<% else %>
	there
<% end %> - <%= @gather.user.name %> invited you to:
</span>
<% if current_page?(root_url) || current_page?('/gathers') %>
	<a href="#" onclick="toggle_visibility('gather<%= @gather.id %>'); return false">
<% end %>
  	<div class="activity">
  		<% if @gather.activity.present? && @gather.activity_2.blank? && @gather.activity_3.blank? %>
  			<%= @gather.activity %>
  		<% elsif (@gather.date_2.blank? && @gather.date_3.blank? && @gather.time_2.blank? && @gather.time_3.blank?) && (@gather.date.present? || @gather.time.present?) %>
  			Hang out <%= "on " + @gather.date.strftime("%A, %b %e") if @gather.date.present? %> <%= "@" + @gather.time.strftime("%l:%M%p") if @gather.time.present? %>	
  		<% elsif @gather.location_2.blank? && @gather.location_3.blank? && @gather.location.present? %>
  			Hang out at <%= @gather.location %>
  		<% else %>
  			Hang out
  		<% end %>
  		<% if @gather.more_details.present? || @gather.details.present? || @gather.updates.present?  %>
  			<% if current_page?(root_url) || current_page?('/gathers') %>
  				<div id="elip">&bull;&bull;&bull;</div>
  			<% end %>
  		<% end %>
  	</div>
<% if current_page?(root_url) || current_page?('/gathers') %>
	</a>
<% end %>
	<% if @date_set == "yes" || @time_set == "yes" || @location_set == "yes" %>
		<span class="tilt">
			<%= @gather.date.strftime("%A, %b %e") if @date_set == "yes" %>
			<% if @time_set == "yes" && @date_set == "yes" %>@<% end %>
			<%= @gather.time.strftime("%l:%M%p") if @time_set == "yes" %>
			<% if @location_set == "yes" && (@date_set == "yes" || @time_set == "yes") %><br><%end%>
			<% if @location_set == "yes" %>
				<img src="/location.png" width="11"> <%= @gather.location %>
			<% end %>
		</span>
	<% end %> 
	<div class="tilt-real">
		<%= @gather.tilt %> friends minimum
	</div>

	<span class="invited"><div class="user_avatars">
	<% @gather.invitations.each do |invitation| %>
		<% if invitation.status == "Yes" %>
				<div id="circle-yes">
					<% if current_page?(root_url) || current_page?('/gathers') %>
						<% if invitation.invitee == current_user %>
							<a href="<%= root_url %>" title="<%= invitation.invitee.name %>">
						<% else %>
							<a href="<%= user_path(invitation.invitee) %>" title="<%= invitation.invitee.name %>">
						<% end %>
					<% end %>
					<% if invitation.invitee == @gather.user %><b><% end %>
					<% if invitation.invitee.name.present? %>
						<%= invitation.invitee.name.at(0.1).upcase %>
					<% else %>
						<%= invitation.invitee.email.at(0.1).upcase %>
					<% end %>
					<% if invitation.invitee == @gather.user %></b><% end %>
				</a>
			</div>
		<% end %>
	<% end %>

	<% @gather.invitations.each do |invitation| %>
		<% if invitation.status == "NA" %>
				<div id="circle-no">
					<% if current_page?(root_url) || current_page?('/gathers') %>
						<% if invitation.invitee == current_user %>
							<a href="<%= root_url %>" title="<%= invitation.invitee.name %>">
						<% else %>
							<a href="<%= user_path(invitation.invitee) %>" title="<%= invitation.invitee.name %>">
						<% end %>
					<% end %>
					<% if invitation.invitee == @gather.user %><b><% end %>
					<% if invitation.invitee.name.present? %>
						<%= invitation.invitee.name.at(0.1).upcase %>
					<% else %>
						<%= invitation.invitee.email.at(0.1).upcase %>
					<% end %>
					<% if invitation.invitee == @gather.user %></b><% end %>
				</a>
		</div>
		<% end %>
	<% end %>

	<% if current_page?(root_url) %>
