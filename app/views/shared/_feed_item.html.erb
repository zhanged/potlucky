<li id="<%= feed_item.id %>">
	<span class="activity"><%= feed_item.activity %></span>
	<span class="invited"><div class="user_avatars">
	<% feed_item.invitees.each do |invitee| %>
		<%= link_to gravatar_for(invitee, size:30), invitee %>
	<% end %>
	</div></span>
	<span class="timestamp"><b><%= feed_item.invited_yes %></b> <%= feed_item.invited_no %></span>
	<span class="tilt">
		<% if feed_item.tilt == nil %>
		<%= feed_item.num_joining %> joining
		<% else %>
			<% if (feed_item.num_joining - 1) >= feed_item.tilt %>
				<b><i><%= "It's on!" %></i></b>
			<% end %>
			<%= feed_item.num_joining %> joining, <%= feed_item.tilt - feed_item.num_joining + 1 %> more to tilt
		<% end %> 
	</span>
	<span><%= render 'shared/join_form', :feed_item => feed_item %>
	</span>
 	<span class="timestamp">
	Created by <%= feed_item.user.name %> <%= time_ago_in_words(feed_item.created_at) %> ago.
	</span>
  <% if current_user?(feed_item.user) %>
  	<%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.activity %>
  <% end %>
</li>