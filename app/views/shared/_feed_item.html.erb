<li id="<%= feed_item.id %>">
	<span class="activity"><%= feed_item.activity %></span>
	<span class="tilt">
		<% if feed_item.tilt == nil %>
		<% else %>
			<% if (feed_item.num_joining - 1) >= feed_item.tilt %>
				<b><%= "It's on!" %></b>
			<% else %>
			<%= feed_item.tilt - feed_item.num_joining + 1 %> more to lift off
			<% end %>
		<% end %> 
	</span>

	<span class="invited"><div class="user_avatars">
	<% feed_item.invitations.each do |invitation| %>
		<% if invitation.status == "Yes" %>
			<button type="button" class="btn-user-small btn-yes btn-default">
				<a href="<%= user_path(invitation.invitee) %>">
					<% if invitation.invitee == feed_item.user %><b><% end %>
					<% if invitation.invitee.name.present? %>
						<%= invitation.invitee.name.at(0.1) %>
					<% else %>
						<%= invitation.invitee.email.at(0.1) %>
					<% end %>
					<% if invitation.invitee == feed_item.user %></b><% end %>
				</a>
			</button>			
		<% end %>
		<% if invitation.status == "NA" %>
			<button type="button" class="btn-user-small btn-no btn-default">
				<a href="<%= user_path(invitation.invitee) %>">
					<% if invitation.invitee == feed_item.user %><b><% end %>
					<% if invitation.invitee.name.present? %>
						<%= invitation.invitee.name.at(0.1) %>
					<% else %>
						<%= invitation.invitee.email.at(0.1) %>
					<% end %>
					<% if invitation.invitee == feed_item.user %></b><% end %>
				</a>
			</button>
		<% end %>
		<!-- 		<%= link_to gravatar_for(invitation.invitee, size:30), invitation.invitee %> -->
	<% end %>

	<a href="#" onclick="toggle_visibility('gather<%= feed_item.id %>'); return false">
  		<b class="caret"></b>
	</a>
		<div id="gather<%= feed_item.id %>" style="display:none;">
			<p class="tilt">
				<% feed_item.invited_yes.downcase.scan(/[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}/i).each do |invitee| %>
				    <%= invitee %>
				<% end %>
				<% feed_item.invited_no.downcase.scan(/[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}/i).each do |invitee| %>
				    <%= invitee %>
				<% end %>
			</p>
			<p class="tilt">
				<%= feed_item.details %>
			</p>
			<p class="tilt">
				Created by <%= feed_item.user.name %> <%= time_ago_in_words(feed_item.created_at) %> ago
					<% if current_user?(feed_item.user) %>
			  			<%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.activity %>
			  		<% end %>
			</p>
		</div>
	</div></span>

	<span><%= render 'shared/join_form', :feed_item => feed_item %>
	</span>

<!--  	<span class="timestamp">
	Created by <%= feed_item.user.name %> <%= time_ago_in_words(feed_item.created_at) %> ago.
	</span>
  <% if current_user?(feed_item.user) %>
  	<%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.activity %>
  <% end %>
 -->
</li>